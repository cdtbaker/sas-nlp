                <comment line="22">
                    static stack_t 
                    new_stack(int N) {
                    stack_t s;
                    s = (stack_t )malloc(sizeof(stack_t));
                    s-&gt;N = N;
                    s-&gt;i = -1;                   indicates stack is empty
                    s-&gt;v = (int )malloc(sizeof(int)N);
                    return s;
                    }
                    static void
                    push_stack(stack_t s, int v)
                    {
                    s-&gt;i += 1;
                    if ((s-&gt;i) &gt;= (s-&gt;N)) {
                    fprintf(stderr,&quot;Cannot push stack!\n&quot;);                    
                </comment>
            </method>
